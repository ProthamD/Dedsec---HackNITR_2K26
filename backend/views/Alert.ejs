<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Warehouse Alerts - Inventree</title>

    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <script src="https://unpkg.com/feather-icons"></script>
    <style>
        :root {
            --bg-primary: hsl(240, 6%, 10%);
            --bg-card: hsl(240, 5%, 12%);
            --border: hsl(240, 4%, 20%);
            --text-primary: hsl(0, 0%, 98%);
            --text-muted: hsl(240, 5%, 64%);
            --accent-green: hsl(142, 70%, 45%);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
            background: var(--bg-primary);
            color: var(--text-primary);
            height: 100vh;
            display: flex;
            flex-direction: column;
        }

        header {
            background: var(--bg-card);
            padding: 20px;
            border-bottom: 1px solid var(--border);
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        header h1 {
            font-size: 1.8em;
        }

        header h1 span.green {
            color: var(--accent-green);
        }

        .back-btn {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 10px 20px;
            background: var(--bg-card);
            border: 1px solid var(--border);
            border-radius: 8px;
            color: var(--text-primary);
            text-decoration: none;
            transition: all 0.2s;
        }

        .back-btn:hover {
            background: var(--border);
            transform: scale(1.05);
        }

        .news-ticker {
            background: linear-gradient(90deg, #1a1a2e 0%, #16213e 100%);
            color: white;
            padding: 12px 0;
            overflow: hidden;
            position: relative;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
            border-top: 2px solid var(--accent-green);
        }

        .news-ticker-content {
            display: flex;
            animation: scroll 30s linear infinite;
        }

        .news-ticker-content:hover {
            animation-play-state: paused;
        }

        .news-item {
            white-space: nowrap;
            padding: 0 30px;
            font-size: 0.95em;
            display: flex;
            align-items: center;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .news-item:hover {
            transform: scale(1.05);
            filter: brightness(1.2);
        }

        .news-item::before {
            content: "üì∞";
            margin-right: 10px;
            font-size: 1.2em;
        }

        .news-item-route {
            color: var(--accent-green);
            font-weight: bold;
            margin: 0 5px;
        }

        .news-item-time {
            color: #aaa;
            font-size: 0.85em;
            margin-left: 10px;
        }

        @keyframes scroll {
            0% { transform: translateX(0); }
            100% { transform: translateX(-50%); }
        }

        .content-wrapper {
            display: flex;
            flex-direction: column;
            flex: 1;
            min-height: 0;
            overflow-y: auto;
        }

        .disaster-panel {
            background: var(--bg-card);
            border-bottom: 2px solid var(--border);
            padding: 15px 20px;
            max-height: 450px;
            overflow-y: auto;
            flex-shrink: 0;
            z-index: 10;
        }

        .disaster-panel::-webkit-scrollbar {
            width: 8px;
        }

        .disaster-panel::-webkit-scrollbar-track {
            background: var(--bg-primary);
        }

        .disaster-panel::-webkit-scrollbar-thumb {
            background: var(--border);
            border-radius: 4px;
        }

        .disaster-panel h2 {
            color: var(--accent-green);
            margin-bottom: 10px;
            display: flex;
            align-items: center;
            gap: 10px;
            font-size: 1.3em;
        }

        .disaster-loading {
            text-align: center;
            color: var(--text-muted);
            padding: 20px;
        }

        .disaster-alert {
            background: var(--bg-primary);
            border: 2px solid #ff6b6b;
            border-radius: 8px;
            padding: 12px;
            margin-bottom: 10px;
        }

        .disaster-alert.medium {
            border-color: #ffd93d;
        }

        .disaster-alert.low {
            border-color: var(--accent-green);
        }

        .disaster-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

        .disaster-type {
            font-weight: 600;
            font-size: 1.1em;
            text-transform: capitalize;
        }

        .severity-badge {
            padding: 4px 12px;
            border-radius: 12px;
            font-size: 0.85em;
            font-weight: 600;
        }

        .severity-high { background: #ff6b6b; color: white; }
        .severity-medium { background: #ffd93d; color: #333; }
        .severity-low { background: #6bcf7f; color: white; }

        .affected-regions {
            color: var(--text-muted);
            margin-bottom: 8px;
            font-size: 0.85em;
        }

        .necessary-products {
            margin-top: 10px;
        }

        .product-item {
            background: var(--bg-card);
            padding: 8px 10px;
            border-left: 3px solid var(--accent-green);
            margin: 5px 0;
            border-radius: 4px;
            font-size: 0.9em;
        }

        .product-item.critical {
            border-left-color: #ff6b6b;
        }

        .product-item.high {
            border-left-color: #ffd93d;
        }

        .product-name {
            font-weight: 600;
            color: var(--text-primary);
        }

        .product-reason {
            color: var(--text-muted);
            font-size: 0.85em;
            margin-top: 3px;
        }

        .product-warehouses {
            color: var(--accent-green);
            font-size: 0.85em;
            margin-top: 5px;
        }

        .recommendations {
            margin-top: 8px;
            padding: 8px;
            background: var(--bg-primary);
            border-radius: 6px;
            font-size: 0.85em;
            color: var(--text-muted);
        }

        .map-chat-wrapper {
            display: flex;
            flex: 1;
            min-height: 600px;
            overflow: hidden;
            position: relative;
            z-index: 1;
        }

        #map {
            flex: 1;
            height: 100%;
            position: relative;
        }

        .ai-chat-panel {
            width: 400px;
            background: var(--bg-card);
            border-left: 1px solid var(--border);
            display: flex;
            flex-direction: column;
        }

        .chat-header {
            padding: 20px;
            border-bottom: 1px solid var(--border);
        }

        .chat-header h3 {
            color: var(--accent-green);
            margin-bottom: 5px;
        }

        .chat-messages {
            flex: 1;
            overflow-y: auto;
            padding: 20px;
        }

        .message {
            margin-bottom: 15px;
            padding: 12px;
            border-radius: 8px;
            animation: slideIn 0.3s ease;
        }

        @keyframes slideIn {
            from { opacity: 0; transform: translateY(10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .message.user {
            background: var(--accent-green);
            color: var(--bg-primary);
            margin-left: 20px;
        }

        .message.ai {
            background: var(--bg-primary);
            border: 1px solid var(--border);
            margin-right: 20px;
        }

        .chat-input-wrapper {
            padding: 20px;
            border-top: 1px solid var(--border);
        }

        .chat-input {
            width: 100%;
            padding: 12px;
            background: var(--bg-primary);
            border: 1px solid var(--border);
            border-radius: 8px;
            color: var(--text-primary);
            font-size: 14px;
        }

        .chat-input:focus {
            outline: none;
            border-color: var(--accent-green);
        }

        .send-btn {
            margin-top: 10px;
            width: 100%;
            padding: 12px;
            background: var(--accent-green);
            color: var(--bg-primary);
            border: none;
            border-radius: 8px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.2s;
        }

        .send-btn:hover {
            transform: scale(1.02);
        }

        .send-btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        /* Leaflet custom styles */
        .custom-marker {
            background: linear-gradient(135deg, var(--accent-green) 0%, #4caf50 100%);
            width: 30px;
            height: 30px;
            border-radius: 50% 50% 50% 0;
            transform: rotate(-45deg);
            border: 3px solid white;
            box-shadow: 0 3px 10px rgba(0, 0, 0, 0.3);
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .marker-icon {
            transform: rotate(45deg);
            font-size: 16px;
        }

        .warehouse-popup h3 {
            color: var(--accent-green);
            margin-bottom: 10px;
        }

        .stock-level {
            display: inline-block;
            padding: 2px 8px;
            border-radius: 12px;
            font-size: 0.75em;
            font-weight: bold;
        }

        .stock-low { background: #ff6b6b; color: white; }
        .stock-medium { background: #ffd93d; color: #333; }
        .stock-good { background: #6bcf7f; color: white; }
        
        @keyframes spin {
            from { transform: rotate(0deg); }
            to { transform: rotate(360deg); }
        }
    </style>
</head>
<body>
    <header>
        <h1>üó∫Ô∏è Warehouse <span class="green">Alerts</span></h1>
        <a href="/" class="back-btn">
            <i data-feather="arrow-left"></i>
            <span>Back to Dashboard</span>
        </a>
    </header>

    <div class="news-ticker">
        <div class="news-ticker-content" id="newsTickerContent">
            <div class="news-item">Loading logistics news...</div>
        </div>
    </div>

    <div class="content-wrapper">
        <div class="disaster-panel" id="disasterPanel">
            <h2>üö® Disaster Analysis</h2>
            <div class="disaster-loading min-h-screen min-w-full">Analyzing current situation with AI...</div>
        </div>

        <div class="map-chat-wrapper">
            <div id="map"></div>
            
            <div class="ai-chat-panel">
            <div class="chat-header">
                <h3>üí¨ AI Assistant</h3>
                <p style="color: var(--text-muted); font-size: 0.9em;">Ask about warehouses, inventory, and news</p>
            </div>
            
            <div class="chat-messages" id="chatMessages">
                <div class="message ai">
                    Hi! I can help you analyze warehouse data and logistics news. Try asking:
                    <ul style="margin-top: 10px; padding-left: 20px;">
                        <li>Which warehouses are affected by the Mumbai-Pune delay?</li>
                        <li>Show me low stock items in Delhi warehouse</li>
                        <li>What's the impact of fuel price surge?</li>
                    </ul>
                </div>
            </div>
            
            <div class="chat-input-wrapper">
                <textarea 
                    id="chatInput" 
                    class="chat-input" 
                    placeholder="Ask about warehouses or news..."
                    rows="3"></textarea>
                <button id="sendBtn" class="send-btn" onclick="sendMessage()">
                    <i data-feather="send"></i> Send Message
                </button>
            </div>
        </div>
        </div>
    </div>

    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        feather.replace();

        // Initialize map
        const map = L.map("map").setView([20.5937, 78.9629], 5);
        L.tileLayer("https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png", {
            attribution: "¬© OpenStreetMap contributors",
            maxZoom: 19,
        }).addTo(map);

        // Warehouse data
        const warehouses = <%- JSON.stringify(warehouses) %>;
        const inventory = <%- JSON.stringify(inventory) %>;

        // News data with impact analysis
        const newsData = [
            {
                id: 0,
                title: 'Heavy monsoon rains causing delays on <span class="news-item-route">Mumbai-Pune</span> highway',
                time: new Date().toLocaleTimeString("en-US", { hour: "2-digit", minute: "2-digit" })
            },
            {
                id: 1,
                title: 'National Highway 44 <span class="news-item-route">Delhi-Bangalore</span> corridor upgraded - faster deliveries expected',
                time: new Date(Date.now() - 25*60000).toLocaleTimeString("en-US", { hour: "2-digit", minute: "2-digit" })
            },
            {
                id: 2,
                title: 'Fuel price surge affecting logistics costs across <span class="news-item-route">all routes</span>',
                time: new Date(Date.now() - 50*60000).toLocaleTimeString("en-US", { hour: "2-digit", minute: "2-digit" })
            }
        ];

        // Update news ticker
        function updateNewsTicker() {
            console.log('Updating news ticker with', newsData.length, 'news items');
            const tickerContent = document.getElementById("newsTickerContent");
            if (!tickerContent) {
                console.error('News ticker element not found');
                return;
            }
            const newsToShow = [...newsData, ...newsData, ...newsData, ...newsData];
            
            tickerContent.innerHTML = newsToShow.map(item => `
                <div class="news-item" onclick="askAboutNews(${item.id})">
                    ${item.title}
                    <span class="news-item-time">${item.time}</span>
                </div>
            `).join('');
        }

        // Add markers
        function addMarkers() {
            console.log('Adding markers for', warehouses.length, 'warehouses');
            warehouses.forEach((warehouse) => {
                const warehouseInventory = inventory.filter(
                    (item) => item.warehouseId === warehouse.id
                );

                const icon = L.divIcon({
                    className: "custom-div-icon",
                    html: `<div class="custom-marker"><div class="marker-icon">üì¶</div></div>`,
                    iconSize: [30, 30],
                    iconAnchor: [15, 30],
                    popupAnchor: [0, -30],
                });

                const marker = L.marker([warehouse.lat, warehouse.lng], { icon }).addTo(map);

                const popupContent = `
                    <div style="max-width: 300px;">
                        <h3>${warehouse.name}</h3>
                        <p><strong>üìç Location:</strong> ${warehouse.location}</p>
                        <p><strong>üì¶ Products:</strong> ${warehouseInventory.length}</p>
                        <button onclick="askAboutWarehouse('${warehouse.id}')" 
                                style="margin-top: 10px; padding: 8px 16px; background: var(--accent-green); color: white; border: none; border-radius: 6px; cursor: pointer;">
                            Ask AI About This Warehouse
                        </button>
                    </div>
                `;

                marker.bindPopup(popupContent);
            });
        }

        // Chat functionality
        async function sendMessage() {
            const input = document.getElementById('chatInput');
            const message = input.value.trim();
            if (!message) return;

            addMessageToChat(message, 'user');
            input.value = '';
            document.getElementById('sendBtn').disabled = true;

            try {
                const response = await fetch('/api/chat', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({
                        message: message + "\n\nContext: I'm viewing the warehouse alerts map with inventory data and logistics news.",
                        userId: 'user123'
                    })
                });

                const data = await response.json();
                addMessageToChat(data.response || 'Sorry, I could not process your request.', 'ai');
            } catch (error) {
                console.error('Chat error:', error);
                addMessageToChat('Sorry, I encountered an error. Please try again.', 'ai');
            } finally {
                document.getElementById('sendBtn').disabled = false;
            }
        }

        function addMessageToChat(text, sender) {
            const messagesDiv = document.getElementById('chatMessages');
            const messageDiv = document.createElement('div');
            messageDiv.className = `message ${sender}`;
            messageDiv.textContent = text;
            messagesDiv.appendChild(messageDiv);
            messagesDiv.scrollTop = messagesDiv.scrollHeight;
        }

        function askAboutNews(newsId) {
            const news = newsData[newsId];
            document.getElementById('chatInput').value = `Tell me about the impact of: ${news.title.replace(/<[^>]*>/g, '')}`;
            sendMessage();
        }

        window.askAboutWarehouse = function(warehouseId) {
            const warehouse = warehouses.find(w => w.id === warehouseId);
            document.getElementById('chatInput').value = `Tell me about ${warehouse.name} and its current inventory status`;
            sendMessage();
        }

        // Enter key to send
        document.getElementById('chatInput').addEventListener('keydown', (e) => {
            if (e.key === 'Enter' && !e.shiftKey) {
                e.preventDefault();
                sendMessage();
            }
        });

        // Initialize
        updateNewsTicker();
        addMarkers();
        loadDisasterAnalysis();

        // Load disaster analysis from AI
        async function loadDisasterAnalysis() {
            const panel = document.getElementById('disasterPanel');
            panel.innerHTML = `
                <h2>üö® Disaster Analysis</h2>
                <div class="disaster-loading">
                    <div style="display: inline-block; animation: spin 1s linear infinite;">‚öôÔ∏è</div>
                    Analyzing current situation...
                </div>
            `;
            
            try {
                console.log('Starting disaster analysis...');
                
                const response = await fetch('/api/analyze-disaster', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ userId: 'user123' })
                });

                console.log('Response status:', response.status);
                
                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const data = await response.json();
                console.log('Disaster data received:', data);
                
                if (data.success === false) {
                    throw new Error(data.error || 'Failed to analyze disasters');
                }
                
                displayDisasters(data.disasters || []);
            } catch (error) {
                console.error('Disaster analysis error:', error);
                panel.innerHTML = `
                    <h2>üö® Disaster Analysis</h2>
                    <div style="color: var(--text-muted); text-align: center; padding: 20px;">
                        <p style="color: #ff6b6b; margin-bottom: 10px;">‚ö†Ô∏è Unable to load disaster analysis</p>
                        <p style="font-size: 0.9em;">${error.message}</p>
                        <button onclick="loadDisasterAnalysis()" 
                                style="margin-top: 15px; padding: 10px 20px; background: var(--accent-green); 
                                       color: white; border: none; border-radius: 8px; cursor: pointer;">
                            üîÑ Retry Analysis
                        </button>
                    </div>
                `;
            }
        }

        function displayDisasters(disasters) {
            const panel = document.getElementById('disasterPanel');
            
            if (disasters.length === 0) {
                panel.innerHTML = `
                    <h2>üö® Disaster Analysis</h2>
                    <div style="color: var(--text-muted); text-align: center; padding: 20px;">
                        ‚úÖ No critical disasters detected. All systems operating normally.
                    </div>
                `;
                return;
            }

            let html = '<h2>üö® Disaster Analysis</h2>';
            
            disasters.forEach(disaster => {
                const severityClass = disaster.severity || 'medium';
                html += `
                    <div class="disaster-alert ${severityClass}">
                        <div class="disaster-header">
                            <div class="disaster-type">${(disaster.type || 'Alert').replace(/_/g, ' ')}</div>
                            <span class="severity-badge severity-${severityClass}">
                                ${severityClass.toUpperCase()}
                            </span>
                        </div>
                        <div class="affected-regions">
                            üìç Affected: ${(disaster.affectedRegions || []).join(', ')}
                        </div>
                        <div class="necessary-products">
                            <strong>Essential Products:</strong>
                            ${(disaster.necessaryProducts || []).map(product => `
                                <div class="product-item ${product.priority}">
                                    <div class="product-name">
                                        üì¶ ${product.name || product.sku}
                                        <span style="color: var(--text-muted); font-weight: normal; font-size: 0.9em;">
                                            (${product.priority} priority)
                                        </span>
                                    </div>
                                    <div class="product-reason">${product.reason}</div>
                                    <div class="product-warehouses">
                                        üè¢ Available at: ${(product.warehouses || []).join(', ')}
                                    </div>
                                </div>
                            `).join('')}
                        </div>
                        ${disaster.recommendations ? `
                            <div class="recommendations">
                                <strong>üí° Recommendations:</strong><br>
                                ${disaster.recommendations}
                            </div>
                        ` : ''}
                    </div>
                `;
            });
            
            panel.innerHTML = html;
        }
    </script>
</body>
</html>
